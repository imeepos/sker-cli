{
  "name": "@sker/protocol-websocket",
  "version": "1.0.0",
  "description": "Sker WebSocket协议实现包，提供实时双向通信能力",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "sker",
    "websocket",
    "ws",
    "realtime",
    "bidirectional",
    "streaming",
    "socket",
    "live"
  ],
  "author": "Sker Team",
  "license": "MIT",
  "homepage": "https://sker.dev/docs/protocol-websocket",
  "repository": {
    "type": "git",
    "url": "https://github.com/sker-ai/sker-cli.git",
    "directory": "packages/protocol-websocket"
  },
  "bugs": {
    "url": "https://github.com/sker-ai/sker-cli/issues"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@sker/core": "workspace:*",
    "@sker/types": "workspace:*",
    "@sker/constants": "workspace:*",
    "@sker/utils": "workspace:*",
    "@sker/logger": "workspace:*",
    "@sker/error-core": "workspace:*",
    "@sker/protocol-ucp": "workspace:*",
    "@sker/serialization-json": "workspace:*",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/ws": "^8.5.12",
    "eslint": "^8.0.0",
    "rimraf": "^5.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.9.2",
    "vitest": "^1.0.0"
  }
}