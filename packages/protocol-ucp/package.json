{
  "name": "@sker/protocol-ucp",
  "version": "1.0.0",
  "description": "Sker统一通信协议(UCP)实现包，提供跨语言跨进程跨端通信的统一协议抽象层",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "sker",
    "ucp",
    "protocol",
    "communication",
    "cross-platform",
    "cross-language",
    "cross-process",
    "rpc",
    "messaging",
    "transport"
  ],
  "author": "Sker Team",
  "license": "MIT",
  "homepage": "https://sker.dev/docs/protocol-ucp",
  "repository": {
    "type": "git",
    "url": "https://github.com/sker-ai/sker-cli.git",
    "directory": "packages/protocol-ucp"
  },
  "bugs": {
    "url": "https://github.com/sker-ai/sker-cli/issues"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@sker/core": "workspace:*",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/ws": "^8.18.1",
    "eslint": "^8.0.0",
    "rimraf": "^5.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.9.2",
    "vitest": "^1.0.0"
  }
}