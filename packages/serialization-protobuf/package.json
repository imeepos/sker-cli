{
  "name": "@sker/serialization-protobuf",
  "version": "1.0.0",
  "description": "Sker Protocol Buffers序列化器实现包，提供高性能二进制序列化功能",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "sker",
    "protobuf",
    "protocol-buffers",
    "serialization",
    "binary",
    "performance",
    "schema",
    "grpc"
  ],
  "author": "Sker Team",
  "license": "MIT",
  "homepage": "https://sker.dev/docs/serialization-protobuf",
  "repository": {
    "type": "git",
    "url": "https://github.com/sker-ai/sker-cli.git",
    "directory": "packages/serialization-protobuf"
  },
  "bugs": {
    "url": "https://github.com/sker-ai/sker-cli/issues"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@sker/types": "workspace:*",
    "@sker/constants": "workspace:*",
    "@sker/utils": "workspace:*",
    "@sker/logger": "workspace:*",
    "@sker/error-core": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "eslint": "^8.0.0",
    "rimraf": "^5.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.9.2",
    "vitest": "^1.0.0"
  }
}