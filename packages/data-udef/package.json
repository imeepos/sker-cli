{
  "name": "@sker/data-udef",
  "version": "1.0.0",
  "description": "Sker统一数据交换格式(UDEF)实现包，提供跨语言数据序列化和标准消息格式",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "sker",
    "udef",
    "data-format",
    "serialization",
    "cross-language",
    "message-format",
    "schema",
    "validation",
    "transformation"
  ],
  "author": "Sker Team",
  "license": "MIT",
  "homepage": "https://sker.dev/docs/data-udef",
  "repository": {
    "type": "git",
    "url": "https://github.com/sker-ai/sker-cli.git",
    "directory": "packages/data-udef"
  },
  "bugs": {
    "url": "https://github.com/sker-ai/sker-cli/issues"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@sker/core": "workspace:*",
    "@sker/types": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "eslint": "^8.0.0",
    "rimraf": "^5.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.9.2",
    "vitest": "^1.0.0"
  }
}