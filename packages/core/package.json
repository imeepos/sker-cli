{
  "name": "@sker/core",
  "version": "1.0.0",
  "description": "Sker核心基础功能包，提供跨语言跨进程跨端通信的核心基础设施",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "package.json"
  ],
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "sker",
    "communication",
    "cross-platform",
    "core",
    "infrastructure"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/sker-ai/sker-cli.git",
    "directory": "packages/core"
  },
  "author": "Sker Team",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "eslint": "^8.0.0",
    "rimraf": "^5.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.9.2",
    "vitest": "^1.0.0"
  }
}