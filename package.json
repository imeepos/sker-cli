{
  "name": "sker-cli",
  "version": "1.0.0",
  "description": "Sker跨语言跨进程跨端通信标准实现的命令行工具集",
  "main": "index.js",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:watch": "turbo run build:watch",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "test:coverage": "turbo run test:coverage",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean",
    "dev": "turbo run dev",
    "release": "changeset publish",
    "version": "changeset version",
    "preinstall": "npx only-allow pnpm",
    "claude": "claude --dangerously-skip-permissions"
  },
  "keywords": [
    "sker",
    "communication",
    "cross-platform",
    "cross-language",
    "cross-process",
    "rpc",
    "messaging",
    "protocol",
    "framework"
  ],
  "author": "Sker Team",
  "license": "MIT",
  "homepage": "https://sker.dev",
  "repository": {
    "type": "git",
    "url": "https://github.com/sker-ai/sker-cli.git"
  },
  "bugs": {
    "url": "https://github.com/sker-ai/sker-cli/issues"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@10.15.0",
  "devDependencies": {
    "@changesets/cli": "^2.27.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "tsup": "^8.0.0",
    "tsx": "^4.0.0",
    "turbo": "^2.5.6",
    "typescript": "^5.9.2",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "reflect-metadata": "^0.2.2"
  }
}
