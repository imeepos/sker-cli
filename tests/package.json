{
  "name": "@sker/tests",
  "version": "1.0.0",
  "description": "Comprehensive test suite for Sker CLI packages",
  "private": true,
  "type": "module",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:protocol": "vitest run --config vitest.protocol.config.ts",
    "test:serialization": "vitest run --config vitest.serialization.config.ts",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:e2e": "vitest run --config vitest.e2e.config.ts",
    "build": "tsup",
    "clean": "rimraf dist coverage .vitest",
    "lint": "eslint src --ext .ts,.tsx",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@sker/core": "workspace:*",
    "@sker/protocol-http": "workspace:*",
    "@sker/protocol-grpc": "workspace:*",
    "@sker/protocol-websocket": "workspace:*",
    "@sker/protocol-ucp": "workspace:*",
    "@sker/serialization-json": "workspace:*",
    "@sker/serialization-protobuf": "workspace:*",
    "@sker/data-udef": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/ws": "^8.5.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitest/coverage-v8": "^1.6.0",
    "@vitest/ui": "^1.6.0",
    "eslint": "^8.0.0",
    "happy-dom": "^12.0.0",
    "msw": "^2.0.0",
    "rimraf": "^5.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.6.0",
    "ws": "^8.18.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "sker",
    "testing",
    "protocol",
    "serialization",
    "integration"
  ],
  "author": "Sker Team",
  "license": "MIT"
}
